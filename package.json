{
  "name": "promise-worker-bi",
  "version": "3.0.2",
  "description": "Bidirectional communication with a Web Worker using Promises",
  "main": "dist/index.js",
  "scripts": {
    "prepublish": "yarn run build",
    "build": "rimraf dist && mkdirp dist && babel index.js --out-file dist/index.js",
    "build-test": "yarn run build && node bin/build-worker-bundles.js && babel test -d dist/test && browserify test/test.js -o dist/test/test.js -t babelify",
    "flow": "flow",
    "lint": "eslint *.js test/*.js bin/*.js",
    "prettier": "prettier --write '*.js' && prettier --write 'test/*.js' && prettier --write 'bin/*.js'",
    "karma": "yarn run build-test && karma start",
    "test": "yarn run flow && yarn run lint && yarn run karma"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dumbmatter/promise-worker-bi.git"
  },
  "keywords": [
    "promise",
    "shared worker",
    "sharedworker",
    "web worker",
    "webworker",
    "worker"
  ],
  "author": "Jeremy Scheff <jdscheff@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/dumbmatter/promise-worker-bi/issues"
  },
  "homepage": "https://github.com/dumbmatter/promise-worker-bi",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^8.2.6",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.0",
    "babelify": "^8.0.0",
    "browserify": "^16.5.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "flow-bin": "^0.111.1",
    "glob": "^7.1.5",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "mkdirp": "^0.5.1",
    "mocha": "^6.2.2",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "stream-to-promise": "^1.1.1"
  },
  "files": [
    "dist"
  ],
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-flow-strip-types"
    ]
  }
}
